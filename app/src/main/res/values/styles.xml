<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialElements.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialElements.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Theme.OutlinedBox.Dense" parent="@style/MaterialElements.TextInputLayout.OutlinedBox.Dense">
        <item name="colorPrimary">@color/coloredAccent</item>
        <item name="colorPrimaryDark">@color/coloredAccent</item>
        <item name="colorAccent">@color/coloredAccent</item>
    </style>

    <style name="Theme.CompoundButton.Switch" parent="@style/MaterialElements.CompoundButton.Switch">
        <item name="colorPrimary">@color/coloredAccent</item>
        <item name="colorPrimaryDark">@color/coloredAccent</item>
        <item name="colorAccent">@color/coloredAccent</item>
    </style>

</resources>
