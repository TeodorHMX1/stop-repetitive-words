<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingEnd="15dp"
    android:paddingBottom="10dp">

    <com.zeoflow.material.elements.textview.MaterialTextView
        android:id="@+id/txtSequence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorTextLvl3"
        android:layout_toStartOf="@+id/simDelete"
        android:textSize="16sp" />

    <com.zeoflow.material.elements.imageview.ShapeableImageView
        android:id="@+id/simDelete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:tint="#DF1717"
        app:srcCompat="@drawable/ic_delete" />

</RelativeLayout>